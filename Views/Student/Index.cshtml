    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="btnClose" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-">
                    <div class="mb-3">
                        <label class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="uName">
                        <input type="hidden" id="hdnStudentID" />
                    </div>

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Address:</label>
                        <input type="text" class="form-control" id="uAddress">
                    </div>

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Age:</label>
                        <input type="text" class="form-control" id="uAge">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Department:</label>
                        <input type="text" class="form-control" id="uDepartment">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Email:</label>
                        <input type="text" class="form-control" id="uEmail">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btnUpdate">Update</button>
                <button type="button" class="btn btn-danger" id="btnClose">Clear</button>
            </div>
        </div>
    </div>
</div>
















<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>

        $(document).ready(function () {
            GetAllData();

        });


           $(document).on('click','.btnClear',function(){
               ClearForm();
           })


    //###########################################Data insert using form###############################################

          $(document).on('click','.btnSubmit',function(){
              var obj = {
                      name:$("#name").val(),
                      address:$("#address").val(),
                      age:$("#age").val(),
                      department:$("#department").val(),
                      email:$("#email").val(),
              }

              if(!obj.name){
                      Swal.fire({
                      icon: "error",
                      title: "Oops...",
                      text: "Please enter Name!"
                    });
              }else if(!obj.address){
                       Swal.fire({
                          icon: "error",
                          title: "Oops...",
                          text: "Please Enter Address!"
                        });
               }else if(!obj.department){
                       Swal.fire({
                             icon: "error",
                             title: "Oops...",
                             text: "Please Enter Department!"
                          });
               }else if(!obj.email){
                             Swal.fire({
                                         icon: "error",
                                         title: "Oops...",
                                         text: "Please Enter Email!"
                                      });
               }else if(!obj.age){
                           Swal.fire({
                                  icon: "error",
                                  title: "Oops...",
                                  text: "Please Enter Age!"
                                });
               }else{
                  //Ajax call for retrive email

                $.ajax({
                    method: 'get',
                    contentType: "application/json: charset=utf-8",
                    url: '@Url.Action("GetAllEmail", "Student")',
                    success: function (res) {
                        var email = res.data;
                        var isAvaiable = false;
                        // debugger;
                        if (res.success) {
                            $.each(email, function (i, x) {
                                if (x == obj.email) {
                                    isAvaiable = true;
                                    return false;  // Break out of the loop once a match is found
                                }
                            });

                            if(isAvaiable){
                                //debugger;
                                Swal.fire({
                                    icon: "error",
                                    title: "Oops...",
                                    text: "Email already exits!!"
                                });

                            }else{
                                $.ajax({
                                    method: 'get',
                                    contentType: "application/json: charset=utf-8",
                                    url: '@Url.Action("Create", "Student")?name=' + obj.name + '&address=' + obj.address + '&age=' + obj.age + '&department=' + obj.department + '&email=' + obj.email,
                                    success: function (res) {
                                        //debugger;
                                        if (res.success) {
                                            ClearForm();
                                            GetAllData();
                                            toastr["success"](res.message);


                                        } else {
                                            alert(res.message);

                                        }
                                    },
                                    error: function (e) { },
                                    beforesend: function () {
                                        //$.blockui();
                                    },
                                    complete: function () {
                                        //$.unblockui();
                                    }
                                });

                            }


                        } else {
                            alert(res.message);

                        }
                    },
                    error: function (e) { },
                    beforesend: function () {
                        //$.blockui();
                    },
                    complete: function () {
                        //$.unblockui();
                    }
                });


              }


         })


              $(document).on('click','.btnEdit',function(){
                  var key = $(this).data('key');
                 // alert("edit")
                  //console.log(key);
                      $.ajax({
                         method: 'get',
                         contentType: "application/json: charset=utf-8",
                         url: '@Url.Action("GetDataById", "Student")?id='+key,
                         success: function (res) {
                             var data = res.data;
                             //debugger;
                             if (res.success) {
                                 // $("updateModal").modal('show');
                                  $("#uName").val(data.name);
                                  $("#uAddress").val(data.address);
                                  $("#uAge").val(data.age);
                                  $("#uDepartment").val(data.department);
                                  $("#uEmail").val(data.email);
                                  $('#hdnStudentID').val(data.sid);

                                  $("#updateModal").modal('show');
                             } else {
                                 alert(res.message);

                             }
                         },
                         error: function (e) { },
                         beforesend: function () {
                             //$.blockui();
                         },
                         complete: function () {
                             //$.unblockui();
                         }
                     });

              })



              $(document).on('click','.btnUpdate',function(){
                          var obj = {
                                        name:$("#uName").val(),
                                        address:$("#uAddress").val(),
                                        age:$("#uAge").val(),
                                        department:$("#uDepartment").val(),
                                        email:$("#uEmail").val(),
                                        key:$('#hdnStudentID').val()
                                     }
                           $.ajax({
                                    method: 'get',
                                    contentType: "application/json: charset=utf-8",
                                    url: '@Url.Action("Update", "Student")?name=' + obj.name + '&address=' + obj.address + '&age=' + obj.age + '&department=' + obj.department + '&email=' + obj.email + '&id=' +obj.key,
                                    success: function (res) {
                                        //debugger;
                                        if (res.success) {
                                             $("#updateModal").modal('hide');
                                            GetAllData();
                                            toastr["success"](res.message);

                                        } else {
                                            alert(res.message);

                                        }
                                    },
                                    error: function (e) { },
                                    beforesend: function () {
                                        //$.blockui();
                                    },
                                    complete: function () {
                                        //$.unblockui();
                                    }
                                });




              });


            $(document).on('click','.btnDelete',function(){

                var key = $(this).data('key');

                    Swal.fire({
                                  title: "Are you sure?",
                                  text: "You won't be able to revert this!",
                                  icon: "warning",
                                  showCancelButton: true,
                                  confirmButtonColor: "#3085d6",
                                  cancelButtonColor: "#d33",
                                  confirmButtonText: "Yes, delete it!"
                                }).then((result) => {
                                  if (result.isConfirmed) {
                                            $.ajax({
                                                     method: 'get',
                                                     contentType: "application/json: charset=utf-8",
                                                     url: '@Url.Action("Delete", "Student")?id='+key,
                                                     success: function (res) {
                                                        // var data = res.data;
                                                         //debugger;
                                                         if (res.success) {
                                                                 GetAllData();
                                                                toastr["success"](res.message);

                                                         } else {
                                                             alert(res.message);


                                                         }
                                                     },
                                                     error: function (e) { },
                                                     beforesend: function () {
                                                         //$.blockui();
                                                     },
                                                     complete: function () {
                                                         //$.unblockui();
                                                     }
                                            });



                                  }
                            });

        });



        $(document).on('click', '.btnView',function(){
            var key = $(this).data('key');
            // alert("edit")
           // console.log(key);
            $.ajax({
                method: 'get',
                contentType: "application/json: charset=utf-8",
                url: '@Url.Action("GetDataById", "Student")?id=' + key,
                success: function (res) {
                    var data = res.data;
                    debugger;
                    if (res.success) {
                        $(".vname").html(data.name);
                        $("#vaddress").html(data.address);
                        $("#vage").html(data.age);
                        $("#vdepartment").html(data.department);
                        $("#vemail").html(data.email);

                        //modal open
                        $("#myModal").modal('show');
                    } else {
                        alert(res.message);

                    }
                },
                error: function (e) { },
                beforesend: function () {
                    //$.blockui();
                },
                complete: function () {
                    //$.unblockui();
                }
            });


        })



    //###############################FUNCTIONS##########################################################################
         function GetAllData(){
                    $.ajax({
                     method: 'get',
                     contentType: "application/json: charset=utf-8",
                         url: '@Url.Action("GetAllData", "Student")',
                     success: function (res) {
                         var data = res.data;
                         //debugger;
                         if (res.success) {
                             var htmlstring = "";

                                 $.each(data, function (i, x) {

                                 htmlstring += "<tr>";
                                 htmlstring += "<td>"+(i+1)+"</td>";
                                 htmlstring += "<td>"+x.name+"</td>";
                                 htmlstring += "<td>"+x.address+"</td>";
                                 htmlstring += "<td>"+x.age+"</td>";
                                 htmlstring += "<td>"+x.department+"</td>";
                                 htmlstring += "<td>"+x.email+"</td>";
                                 htmlstring += "<td>";
                                 htmlstring += "<button type= 'button' class='btn btn-secondary btnEdit btn-sm me-2' data-key='" + x.sid + "'>Edit</button>";
                                 htmlstring += "<button type= 'button' class='btn btn-danger btnDelete btn-sm me-2 ' data-key='"+x.sid+"'>Delete</button>";
                                 htmlstring += "<button type= 'button' class='btn btn-success btnView btn-sm ' data-key='" + x.sid + "'>View</button>";

                                 htmlstring += "</td>";


                             });
                                 $('#list').html(htmlstring);


                         } else {
                             alert(res.message);

                         }
                     },
                     error: function (e) { },
                     beforesend: function () {
                         //$.blockui();
                     },
                     complete: function () {
                         //$.unblockui();
                     }
                 });
        }


        function ClearForm(){

                 $("#name").val('');
                 $("#address").val('');
                 $("#age").val('');
                 $("#department").val('');
                 $("#email").val('');

        }




</script>
